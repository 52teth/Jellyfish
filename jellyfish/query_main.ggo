purpose "Query from a compacted database"
args "--show-required --default-option -c cc -H hpp -F query_cmdline -f query_cmdline -a query_args --unamed-opts=database.jf"
package "jellyfish query"

option "both-strands"           C "Both strands"
  flag off
option "verbose"                v "Be verbose"
  flag off
option "output"                 o "Output file"
  string default="/dev/fd/1" typestr="file"
